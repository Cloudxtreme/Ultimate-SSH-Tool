##DESCRP=Find number of SMTP auths by email address Eg. qmauthl test@domain.tld.
function qmauthl(){
EXAMPLE=`head -n1 /root/support/qmail_auths.log`
NUMBER=`cat /root/support/qmail_auths.log |wc -l`
	echo "Parsing current mail log..."
		grep "smtp_auth: SMTP user $@" /usr/local/psa/var/log/maillog >> /root/support/qmail_auths.log.`(date +"%m-%d-%Y")`;
	echo "Parsing processed mail log..."
		gunzip -c /usr/local/psa/var/log/maillog.processed.* | grep "smtp_auth: SMTP user $@" >> /root/support/qmail_auths.log.`(date +"%m-%d-%Y")`;
	echo "Example auth: $EXAMPLE";
	echo "Number of authentications: $NUMBER";
}
