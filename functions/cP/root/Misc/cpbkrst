##DESCRP=cPanel backup downloader and restoration tool.
function cpbkrst(){
	echo "Enter the source cPanel account name:"
		read USER
	echo "Enter the cPanel account password:"
		read PASS
	echo "Enter the cPanel backup download link from source server:"
		read DLFILE

	wget -nv --user=$USER --password=$PASS --auth-no-challenge --no-check-certificate $DLFILE --output-file=/home/backup-$USER.tar.gz

	read -p "Download complete. Restore account $USER now? (y/n)"
		[ "$REPLY" == "y" ] || /scripts/restorepkg $USER
}
