##DESCRP=Search for common malware using file name repo.
function findcommal(){
MWLIST=$(curl -s http://repo.servergur.us/lists/common.mal.list)
MWHIT=""
# Begin Function
echo "Beginning Common Malware Search"
	
	while true; do echo -n .;sleep 1;done &
		
		for i in $MWLIST; do 
			find /home/*/public_html/ -type f -iname $i -exec readlink -f {} \; >> $MWHIT
		}

	kill $!; trap 'kill $!' SIGTERM

if [ -z "$MWHIT" ]; then
		echo "Possible malware found in the following files:"
		echo "$MWHIT"
		echo " "
	else
		echo "No known files discovered!"
fi

echo "Search completed."
