##DESCRP=Removes all core.dump files and disables them from being created.
function rmdiscore()
{
	find . -type f -regex ".*/core.[0-9][0-9][0-9][0-9]$" -exec rm;
		echo 'All core dump files have been removed.'

	cp /etc/security/limits.conf /root/support/limits.conf.bak
		echo 'A copy of limit.conf has been generated here: /root/support/limits.conf'
		echo '* hard core 0' >> /etc/security/limits.conf
		echo ‘* soft core 0′ >> /etc/security/limits.conf

	cp /etc/sysctl.conf /root/support/sysctl.conf.bak
		echo 'A copy of sysctl.conf has been generated here: /root/support/sysctl.conf.bak
		echo 'fs.suid_dumpable = 0' >> /etc/sysctl.conf
			sysctl -p

	cp /etc/profile /root/support/profile.bak
		echo 'A copy of 'profile' has been generated here: /root/support/profile.bak'
		echo 'ulimit -S -c 0 > /dev/null 2>&1' >> /etc/profile
		echo 'All core dump files have been removed and are permanently disabled at this time.'
}

