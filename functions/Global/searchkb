##DESCRP=Search KH Knowledgebase for related articles. searchkb Help me please?
function searchkb(){
  echo "Results:" 
  echo "--------"
  echo " "
  curl -s --data "searchquery=$@" https://support.knownhost.com/Base/Search/Index |grep -Po '\<div class\=\"kbsearch\"\>\<a href\=\"https:\/\/support\.knownhost\.com\/Knowledgebase\/Article\/View\/(\d{3,4})\/(\d)\/(\w.*)\"\>(.*)\<\/a\>' |awk '{gsub("<div class=\"kbsearch\"><a href=\"", "");gsub("\">", " ");gsub("</a>", ""); print}' | awk '{ s = ""; for (i = 2; i <= NF; i++) s = s $i " "; print s " \n Link: " $1 " \n"}'
  echo "--------"
  echo "Search for $@ completed."
}
