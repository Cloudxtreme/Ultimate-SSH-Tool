##DESCRP=Ignore CSF Process | # csfign cmd:app /location/
NOW=$(date +'%m-%d-%Y')
function csfign()
{
	echo $@  >> /etc/csf/csf.pignore
	echo "# Added $NOW to ignore the process." >> /etc/csf/csf.pignore
	echo ' '
	echo "What was added:"
	echo "---------------"
	tail -n2 /etc/csf/csf.pignore
	echo ' '
	echo 'Restarting...'
	/etc/init.d/csf restart && /etc/init.d/lfd restart
	echo ' '
	echo 'CSF and LFD have been restarted.'
}
