#DESCRP=List top 5 mysql tables by size.
function lsmy5tables(){
TABLES=$(ls -lahS /var/lib/mysql/*/*.MYD|head -n5)
	echo "Top 5 largest MySQL Tables:'; 
	echo "---------------------------";
		IFS=$'\n'
		for TABLE in "$TABLES"; do 
			TBLPATH=$(echo "$TABLE" |awk '{print $9}');
			DBNAME=$(echo "$TBLNAME" |awk -F/ '{print $5}');
			DBOWNER=$(echo "$DBNAME" |sed 's/[_].*$//');
				echo "Database $DBNAME is owned by $DBOWNER $TBLPATH";
		unset IFS
	done
}
